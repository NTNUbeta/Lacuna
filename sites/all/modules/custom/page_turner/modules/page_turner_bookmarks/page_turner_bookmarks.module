/**
 * Menu callback
 *
 * Creates a new bookmark for the selected page(s)
 **/
function page_turner_bookmark_add() {
	$pages = $_POST['pages'];
	$path = drupal_lookup_path('source', $_POST['path']);
	$node = menu_get_object($type = 'node', $position = 1, $path);
	ddl($path);
	ddl($node);
  $flag_values = new stdClass();
  $flag_values->{'page_start'}[LANGUAGE_NONE][]['value'] = $pages['start'];
	$flag_values->{'page_end'}[LANGUAGE_NONE][]['value'] = $pages['end'];
	$bookmarks = flag_get_flag(PAGE_TURNER_BOOKMARK_FLAG);
	// Add given page range to bookmark flag
//	$bookmarks->flag('flag', $node->nid, NULL, FALSE, $flag_values);
	ddl($bookmarks);
	drupal_json_output();
}

