/**
 * @param $og_membership
 *
 * When a new user joins a course group, create new private group(s)
 * for instructor->student private annotations
 */
function lacuna_private_feedback_og_membership_insert($og_membership) {
  global $user;
  // Only trigger when somebody joins a course
  if ($og_membership->entityType != 'course') {
    return;
  }

  $members = og_get_membership('course', $og_membership->gid,
    $og_membership->entityType, $og_membership->idKey);

  $instructors = array(); // instructors are group admins
  $students = array();
  foreach ($members as $member) {
    if ($member->role == OG_ADMINISTRATOR_ROLE) {
      $instructors[] = $member;
    } else {
      $students[] = $member;
    }
  }
  dpm($students, 'Students');
  dpm($instructors, 'Instructors');

  $rid = array_search('instructor', user_roles());
